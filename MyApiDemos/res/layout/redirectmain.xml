<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="You now see the main activity running normally because the user text has been set to:"
    />
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text=""
    android:id="@+id/tvRedirectResult"
    />    
<Button
	android:layout_width="wrap_content" 
    android:layout_height="wrap_content"    
    android:text="Clear and Exit"
    android:id="@+id/btnRedirectClear"
    android:layout_gravity="center_horizontal"/>
<Button
	android:layout_width="wrap_content" 
    android:layout_height="wrap_content"    
    android:text="New Text"
    android:id="@+id/btnRedirectNew"
    android:layout_gravity="center_horizontal"/>
</LinearLayout>
